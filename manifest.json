{
  "manifest_version": 3,
  "name": "Data Usage Monitor",
  "version": "1.0",
  "description": "Monitor and track your browser data usage",
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "activeTab",
    "background"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background_service_worker.js"
  },
  "action": {
    "default_popup": "popup_html.html",
    "default_title": "Data Usage Monitor"
  }

}

